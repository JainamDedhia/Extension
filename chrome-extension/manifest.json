{
  "manifest_version": 3,
  "name": "Cognix Prompter",
  "version": "1.0",
  "description": "AI-powered prompt enhancement extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.groq.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cognix Prompter"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ui-components.js",
        "text-detector.js",
        "images/cognix.svg"    
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
